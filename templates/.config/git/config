[core]
	fileMode = false
	autocrlf = false
[init]
	defaultBranch = main
[push]
	default = current
	autoSetupRemote = true
[pull]
	rebase = true
[commit]
	gpgSign = true
[gpg]
	program = gpg
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	cl = clone
	st = status
	df = diff
	dfc = diff --cached
	dfo = !git diff "origin/$(git rev-parse --abbrev-ref HEAD)"
	ad = add
	ada = add -A
	cm = commit
	cme = !git commit -m "$(git rev-parse --abbrev-ref HEAD): " -e
	cma = commit --amend
	tg = tag
	lg = log
	lgp = log -p
	lgs = log --stat
	lgo = !git log "origin/$(git rev-parse --abbrev-ref HEAD).."
	ft = fetch
	pl = pull
	pu = push
	puf = push --force-with-lease --force-if-includes
	rb = rebase
	rbi = rebase -i
	rbc = rebase --continue
	ch = checkout
	br = branch
	rs = reset
	rso = !git reset --hard "origin/$(git rev-parse --abbrev-ref HEAD)"
	rt = restore
	sh = stash
	shu = stash -u
	shp = stash push
	shl = stash list
	sha = stash apply
	shd = stash drop
	cn = clean -idx
{{ range $identity := .git.identities -}}
{{ range $identity.remotes -}}
[includeIf "hasconfig:remote.*.url:{{ . }}"]
	path = config.d/{{ $identity.path }}
{{ end -}}
{{ end -}}
