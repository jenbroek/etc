_PS1() {
	local e=$? cwd branch stage context

	case $e in
		0) cwd='\[\033[38;5;2m\]\w\[\033[m\]' ;;
		*) cwd='\[\033[38;5;1m\]\w\[\033[m\]' ;;
	esac

	branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null)

	if test -n "$branch"; then
		git status --porcelain 2> /dev/null | grep -q '^\w' && stage=1
		git status --porcelain 2> /dev/null | grep -qv '^\w' && stage=$((stage + 2))

		case $stage in
			1) stage='\[\033[38;5;12m\]*\[\033[m\]' ;;
			2) stage='\[\033[38;5;13m\]*\[\033[m\]' ;;
			3) stage='\[\033[38;5;11m\]*\[\033[m\]' ;;
		esac
	fi

	context=$(grep -Po 'current-context: \K.*' ~/.kube/config)
	case $context in
		colima|rancher-desktop|'') unset context ;;
		*) context="\[\033[38;5;8m\]$context\[\033[m\]"
	esac

	set -o noglob
	printf '\[\033]0;\w\007\]'
	printf '%s ' $cwd $branch $stage $context '
→'
}

colors() {
	for i in $(seq 0 15); do
		printf "\033[38;5;${i}m███\033[m"
		test $i = 7 || test $i = 15 && echo
	done
}

alias g=git
alias k=kubectl

alias tree='tree -CF --dirsfirst'
alias grep='grep --color'
alias diff='diff -u --color'
alias diffc='diff --color=always'
alias lessr='less -R'
alias cat='cat -v'

alias ls='ls -F --color --group-directories-first'
alias la='ls -A'
alias ll='ls -hl'
alias lla='ls -Ahl'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

PS1='$(_PS1)'

export EDITOR=nvim
export LESSHISTFILE=-
export GPG_TTY=$(tty)
